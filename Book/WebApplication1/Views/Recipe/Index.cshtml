@model IEnumerable<WebApplication1.Models.Recipe>

@{
    ViewBag.Title = "Recipe Lookup";
}

<h2>Recipe Lookup</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find recipe by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-danger btn-sm"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            Sort By:
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            &nbsp;
            &nbsp;
            @Html.ActionLink("Nationality", "Index", new { sortOrder = ViewBag.NationalitySortParm })
            <br/><br/>
        </th>
        <th></th>
    </tr>
     <tr>
            <th>
                @*<span class="label label-info" >Name</span>*@
                <button class="btn btn-info btn-sm">Name</button>
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                @*<span class="label label-success">Nationality</span>*@
                <button class="btn btn-success btn-sm">Nationality</button>
                @*@Html.DisplayNameFor(model => model.Nationality)*@
            </th>
            <th>
                @*<span class="label label-warning">Preparation Time</span>*@
                <button class="btn btn-warning btn-sm">Preparation Time</button>
                @*@Html.DisplayNameFor(model => model.PrepTime)*@
            </th>
            <th>
                @*<span class="label label-danger">Cook Time</span>*@
                <button class="btn btn-danger btn-sm">Cook Time</button>
                @*@Html.DisplayNameFor(model => model.CookTime)*@
            </th>
            <th>
                @*<span class="label label-info">Number Of People</span>*@
                <button class="btn btn-info btn-sm">Number of People</button>
                @*@Html.DisplayNameFor(model => model.NbrOfPeople)*@
            </th>
            <th>
                @*<span class="label label-success">Number Of Steps</span>*@
                <button class="btn btn-success btn-sm">Number of Steps</button>
                @*@Html.DisplayNameFor(model => model.NbrOfSteps)*@
            </th>
            <th>
                @*<span class="label label-warning">Ingredients</span>*@
                <button class="btn btn-warning btn-sm">Ingredients</button>
                @*@Html.DisplayNameFor(model => model.Ingredients)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrepTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CookTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NbrOfPeople)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NbrOfSteps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
